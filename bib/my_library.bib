  journal = {Microbiome},
  author = {Weiss, Sophie and Xu, Zhenjiang Zech and Peddada, Shyamal and Amir, Amnon and Bittinger, Kyle and Gonzalez, Antonio and Lozupone, Catherine and Zaneveld, Jesse R. and {V\'azquez-Baeza}, Yoshiki and Birmingham, Amanda and Hyde, Embriette R. and Knight, Rob},
